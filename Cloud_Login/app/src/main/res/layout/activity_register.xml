<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Funcation.RegisterActivity">
    <LinearLayout
        android:id="@+id/edit_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_username_register"
            android:hint="请输入用户名"
            android:maxLines="1"/>
        />
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_password_register"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:maxLines="1"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_pasword2_register"
            android:hint="再次确定密码"
            android:inputType="textPassword"
            android:maxLines="1"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_email_register"
            android:hint="请输入邮箱"
            android:maxLines="1"/>

    </LinearLayout>
     <Button
         android:id="@+id/btn_reigster"
         android:layout_marginTop="50dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/edit_register"
         android:text="确定"
         android:gravity="center"
         android:textSize="20dp"/>
</RelativeLayout>